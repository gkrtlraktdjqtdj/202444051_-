#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    system("title 정수 1개 입력 후 출력");

    int num;
    printf("1.정수 입력");
    scanf("%d", &num);
    printf("2.키보드로 입력받은 값은 %d입니다\n", num);
    return 0;
}
----------------------------------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    system("title 정수 2개 입력 후 출력");

    int num1, num2, hap;
    printf("1.첫 번째 정수 입력");

    scanf("%d", &num1);
    printf("2.두 번째 정수 입력");

    scanf("%d", &num2);
    hap = num1 + num2;

    printf("3.덧셈 결과: %d+%d =%d\n", num1,num2,hap);
    return 0;
}
----------------------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    system("title 정수 2개 입력 후 뺄셈 연산");

    int num1, num2, cha;
    printf("1.두 개의 정수 입력");
    scanf("%d %d",&num1, &num2);

    cha = num1 - num2;

    printf("3.뺄셈 결과: %d-%d =%d\n", num1,num2,cha);
    return 0;
}
---------------------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    system("title 배열로 문자열 처리");

    char ch;
    char str[10];

    printf("1.문자 입력 : ");
    scanf_s("%c", &ch, sizeof(ch));

    printf("2.문자열 입력 : ");
    scanf_s("%s", str, sizeof(str));

    printf("입력한 문자 출력 : %c\n", ch);
    printf("입력한 문자열 출력 : %s\n", str);
    return 0;
}
